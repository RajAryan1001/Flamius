<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <style>
    :root {
      --primary: #667eea;
      --primary-dark: #5a6fd8;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .card {
      background: white;
      padding: 2.5rem;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
      width: 100%;
      max-width: 520px;
    }
    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 1.5rem;
      font-size: 1.8rem;
    }
    label {
      display: block;
      margin: 15px 0 8px;
      font-weight: 600;
      color: #444;
    }
    input, textarea {
      width: 100%;
      padding: 12px 16px;
      border: 2px solid #e1e5e9;
      border-radius: 8px;
      font-size: 1rem;
      transition: 0.3s;
    }
    input:focus, textarea:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    .file-input {
      padding: 10px 0;
    }
    .preview {
      margin-top: 10px;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .preview img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
      border: 2px solid #ddd;
    }
    button {
      width: 100%;
      padding: 14px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      margin-top: 20px;
      transition: 0.3s;
    }
    button:hover {
      background: var(--primary-dark);
    }
    .success {
      background: #d4edda;
      color: #155724;
      padding: 12px;
      border-radius: 8px;
      text-align: center;
      margin-top: 15px;
      display: none;
    }
    .back {
      text-align: center;
      margin-top: 20px;
    }
    .back a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="card">
    <h2>Add New Product</h2>
    <div class="success" id="success">Product added!</div>

    <form id="form" enctype="multipart/form-data">
      <label>Title</label>
      <input type="text" name="title" required />

      <label>Description</label>
      <textarea name="description" rows="4" required></textarea>

      <label>Price (â‚¹)</label>
      <input type="number" name="price" min="1" required />

      <label>Images (Max 5)</label>
      <input type="file" name="images" multiple accept="image/*" required class="file-input" />
      <div class="preview" id="preview"></div>

      <button type="submit">Upload Product</button>
    </form>

    <div class="back">
      <a href="/api/product/view-products">View All Products</a>
    </div>
  </div>

  <script>
    const preview = document.getElementById('preview');
    document.querySelector('input[name="images"]').onchange = (e) => {
      preview.innerHTML = '';
      [...e.target.files].slice(0, 5).forEach(file => {
        const img = document.createElement('img');
        img.src = URL.createObjectURL(file);
        preview.appendChild(img);
      });
    };

    document.getElementById('form').onsubmit = async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const success = document.getElementById('success');

      try {
        const res = await fetch('/api/product/create-product', {
          method: 'POST',
          body: formData
        });
        const data = await res.json();

        if (res.ok) {
          success.style.display = 'block';
          setTimeout(() => location.href = '/api/product/view-products', 1500);
        } else {
          alert(data.message || 'Error');
        }
      } catch (err) {
        alert('Network error');
      }
    };
  </script>
</body>
</html>